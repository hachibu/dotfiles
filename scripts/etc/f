#!/usr/bin/env crystal

require "string_scanner"

# atom = integer
#      | word (. : + - * /)
#      | quote
#      | type
#
# type = Int
#      | Str
#
# [1 2 3] [dup *] map
# 1 Int32 : 2 Int32 : + (Int32 -> Int32 -> Int32) :
# typed calculator

def read(s : String)
  ws = [] of String
  ss = StringScanner.new(s)
  until ss.eos?
    ss.skip(/\s+/)
    case
    when w = ss.scan(/\d+/)
      ws << w
    else
      puts ss.inspect
      break
    end
  end
  ws
end

p read(ARGV.first)
