#!/usr/bin/env bash

containers=$(docker ps -qa)
if [[ -n "$containers" ]]; then
    docker stop "$containers"
    docker rm "$containers"
fi

images=$(docker images -qa)
if [[ -n "$images" ]]; then
    docker rmi -f "$images"
fi

volumes=$(docker volume ls -q)
if [[ -n "$volumes" ]]; then
    docker volume rm "$volumes"
fi
