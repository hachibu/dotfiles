[user]
  name  = hachibu
  email = raymondsohn@gmail.com

[core]
  editor       = vim
  excludesfile = ~/.gitignore

[color]
  ui     = auto
  status = auto
  diff   = auto
  branch = auto

[pager]
  branch = false

[pull]
  rebase = true

[push]
  default = current

[alias]
  a  = commit --amend
  b  = branch
  cp = !git add . && git commit -m "Checkpoint" --cleanup=strip
  co = checkout
  e  = config --edit --global
  s  = rebase -i HEAD~2
  up = !git fetch --all --prune && git pull --rebase
