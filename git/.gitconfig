[user]
  name  = hachibu
  email = raymondsohn@gmail.com

[core]
  editor       = vim
  excludesfile = ~/.gitignore

[color]
  ui     = auto
  status = auto
  diff   = auto
  branch = auto

[pager]
  branch = false

[pull]
  rebase = true

[push]
  default = current

[alias]
  u = !git fetch --all --prune && git pull --rebase
  c = !git add . && git commit -m "Checkpoint" --cleanup=strip
  s = rebase -i HEAD~2
