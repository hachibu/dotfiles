[user]
  name  = hachibu
  email = raymondsohn@gmail.com

[core]
  editor       = vim
  excludesfile = ~/.gitignore

[color]
  ui     = auto
  status = auto
  diff   = auto
  branch = auto

[pager]
  branch = false

[pull]
  rebase = true

[push]
  default = current

[alias]
  up    = !git fetch --all --prune && git pull --rebase
  setup = !git up && bin/setup
